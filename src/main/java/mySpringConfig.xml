<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>
    <bean 
        id="SomeBean1" 
        class="com.epam.training.taranovski.spring.classes.SomeBean1Impl" 
        beanType = "common">
        <property name="someProperty3" itemType="string" value="blah!!!" />
    </bean>
    
    <bean 
        id="SomeBean2" 
        class="com.epam.training.taranovski.spring.classes.SomeBean2Impl" 
        beanType = "common">
        <property name="someProperty4" itemType="string" value="blah2" />
    </bean>
    
    <bean 
        id="SomeBean" 
        class="com.epam.training.taranovski.spring.classes.SomeBeanImpl" 
        beanType = "common">
        <constructor-arg itemType="custom" reference="SomeBean2" />
        <property name="someProperty1" itemType="string" value="blah1" />
        <property name="someProperty2" itemType="custom" reference="SomeBean1" />		
    </bean>
    
    <bean 
        id="GreetingService" 
        class="com.epam.training.taranovski.spring.classes.GreetingServiceImpl" 
        beanType="singleton" >
        <constructor-arg itemType="string" value="Hello World!" />
        <constructor-arg itemType="custom" reference="SomeBean" />
    </bean>

</beans>